<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="400" height="300" creationComplete="init(event)">
	<fx:Metadata> 
		[Event(name="closeClicked", type="flash.events.Event")]
	</fx:Metadata> 
	<fx:Script>
		<![CDATA[
			import locales.Locale;
			
			import model.AlternativeWrapper;
			
			import mx.collections.ArrayList;
			import mx.events.FlexEvent;
			
			import spark.components.gridClasses.GridColumn;
			
			import utils.DateTimeUtils;
			
			[Bindable]
			public var loc:Object = Locale.getInstance().getCurrentLocale();
			
			[Bindable]
			public var alternative:AlternativeWrapper
			
			protected function closeButton_clickHandler(event:MouseEvent):void
			{
				dispatchEvent(new Event("closeClicked"));
			}
			
			protected function init(event:FlexEvent):void
			{
				//adds columns to the grid
				grid.columns = new ArrayList();
				grid.columns.addItem(new GridColumn(loc.room.singular));
				var i:int = 0;
				while(DateTimeUtils.rollDaysToDate(alternative.dateFrom,i) <= alternative.dateTo){
					grid.columns.addItem(DateTimeUtils.getColumnForDate(DateTimeUtils.rollDaysToDate(alternative.dateFrom,i)));
					i++;
				}
			}
			
			
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:VGroup width="100%" height="100%">
		<s:DataGrid id="grid" width="100%" height="100%"/>
		<s:Button id="closeButton" label="{loc.button.close}" click="closeButton_clickHandler(event)"/>
	</s:VGroup>
</s:Group>
