			// Write String to labelDisplay component. 
			override public function set label(value:String):void 
			{ 
				super.label = value; 
				
				// Determine the RGB color value from the data item.
				// 				if (label == "red")
				//					backgroundColor = 0xFF0000;
				//				if (label == "green")
				//					backgroundColor = 0x00FF00;
				//				if (label == "blue")
				//					backgroundColor = 0x0000FF;
			}
			
			override protected function updateDisplayList(unscaledWidth:Number, unscaledHeight:Number):void
			{
				super.updateDisplayList(unscaledWidth, unscaledHeight);
				viewPromotionButton.visible = false;
				if(column == null || data == null){
					return;
				}
				
				
				var alternative:Alternative; 
				if(data[column.dataField] is Alternative){
					alternative = data[column.dataField] as Alternative;
					if(alternative.promotion !=null){
						viewPromotionButton.visible = true;
						viewPromotionButton.promotion = alternative.promotion;
						viewPromotionButton.label = Locale.getInstance().getCurrentLocale().alternative.view;
					}
				}
				
			}
		]]>
	</fx:Script>
