<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  xmlns:individual="view.forms.crud.individual.*"
		  xmlns:components="view.components.*"
		  width="100%" height="100%" creationComplete="init(event)">
	<fx:Script>
		<![CDATA[
			import model.ExchangeRate;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			
			import resources.Colors;
			
			import services.crud.ExchangeRateService;
			
			import spark.events.GridSelectionEvent;
			
			[Bindable]
			public var loc:Object;
			
			[Bindable]
			private var exchangeRates:ArrayCollection = new ArrayCollection();
			
			// Handle a message fault.
			private function faultHandler(event:FaultEvent,token:Object=null):void {
				var errCode:String = event.fault.rootCause.errorCode;
				
				Alert.show( loc.validator.server.child(errCode).text(), loc.validator.error );
			}
			
			private function retrieveAll_resultHandler(event:ResultEvent,token:Object=null):void {
				grid.selectedItem = null;
				exchangeRates.removeAll();
				exchangeRates.addAll(event.result as ArrayCollection);
			}
			
			
			private function delete_resultHandler(event:ResultEvent,token:Object=null):void {
				refreshGrid();
			}
			
			
			protected function init(event:FlexEvent):void{
				refreshGrid();
			}
			
			protected function refreshGrid():void
			{
				individual.enabled = false;
				grid.selectedItem = null;
				new ExchangeRateService().retrieveAll(retrieveAll_resultHandler,faultHandler);
			}
			
			protected function grid_selectionChangeHandler(event:GridSelectionEvent):void
			{
				if(grid.selectedItem !=null){
					individual.currentExchangeRate = grid.selectedItem as ExchangeRate;
				}
				individual.enabled = false;
			}
			
			protected function modifyExchangeRate():void
			{
				individual.currentExchangeRate = grid.selectedItem as ExchangeRate;
				individual.isUpdate = true;
				individual.enabled=true;
				
			}
			
			protected function deleteExchangeRate():void
			{
				new ExchangeRateService().deleteRecord(grid.selectedItem as ExchangeRate,delete_resultHandler,faultHandler);
			}
			
			protected function addExchangeRate():void
			{
				grid.selectedItem = null;
				individual.currentExchangeRate = new ExchangeRate();
				individual.isUpdate = false;
				individual.enabled = true;
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<mx:VDividedBox width="100%" height="100%">
		<s:HGroup width="100%" height="60%">
			<s:DataGrid id="grid" width="100%" height="100%" dataProvider="{exchangeRates}"
						selectionChange="grid_selectionChangeHandler(event)" alternatingRowColors="{Colors.ALTERNATING_ROW_COLORS}" skinClass="view.skins.CustomDataGridSkin">
				<s:columns>
					<s:ArrayList>
						<s:GridColumn dataField="id" headerText="{loc.exchangeRate.currencyCode}"></s:GridColumn>
						<s:GridColumn dataField="name" headerText="{loc.exchangeRate.singular}"></s:GridColumn>
						<s:GridColumn dataField="currencySymbol"
									  headerText="{loc.exchangeRate.currencySymbol}"></s:GridColumn>
						<s:GridColumn dataField="valueAgainstRealFormatted"
									  headerText="{loc.exchangeRate.valueAgainstReal}"></s:GridColumn>
					</s:ArrayList>
				</s:columns>
			</s:DataGrid>
			<!-- BUTTONS -->
			<components:CRUDButtons height="100%" addClicked="addExchangeRate()" loc="{loc}"
									modifyButtonEnabled="{grid.selectedItem!=null}"
									modifyClicked="modifyExchangeRate()" refreshClicked="refreshGrid()"
									removeButtonEnabled="{grid.selectedItem!=null}"
									removeClicked="deleteExchangeRate()"/>
		</s:HGroup>
		<individual:ExchangeRateIndividualCRUDForm id="individual" height="40%"
												   cancelClicked="individual.enabled=false;"
												   enabled="false" loc="{loc}"
												   saveSuccess="refreshGrid();"/>
	</mx:VDividedBox>
</s:VGroup>
