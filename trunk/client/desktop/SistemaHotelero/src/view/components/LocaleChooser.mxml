<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Metadata> 
		 [Event(name="localeChanged", type="flash.events.Event")]
	</fx:Metadata> 
	<fx:Script>
		<![CDATA[
			import locales.Locale;
			
			import resources.icons.Icons;
			[Bindable]
			public var loc:Object;
			
			protected function changeLocale(newLocale:String):void
			{
				Locale.getInstance().setCurrentLocale(newLocale);
				dispatchEvent(new Event("localeChanged"));
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:HGroup width="100%" height="100%">
		<s:Image source="{Icons.es_AR}" useHandCursor="true" buttonMode="true" click="changeLocale('es_AR')" toolTip="{loc.language.spanish}" />
		<s:Image source="{Icons.pt_BR}" useHandCursor="true" buttonMode="true" click="changeLocale('pt_BR')" toolTip="{loc.language.portuguese}"/>
		<s:Image source="{Icons.en_US}" useHandCursor="true" buttonMode="true" click="changeLocale('en_US')" toolTip="{loc.language.english}"/>
	</s:HGroup>
</s:Group>
