<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%" xmlns:components="view.components.*">
	<fx:Metadata> 
		[Event(name="alternativeSelectedChanged", type="flash.events.Event")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import locales.Locale;
			
			import model.AlternativeWrapper;
			import model.Promotion;
			
			import mx.collections.ArrayCollection;
			import mx.containers.TitleWindow;
			import mx.controls.Alert;
			import mx.managers.PopUpManager;
			
			import resources.Colors;
			
			import spark.events.GridEvent;
			import spark.events.GridSelectionEvent;
			
			import utils.DateTimeUtils;
			import utils.WindowsUtils;
			
			import view.forms.crud.individual.PromotionIndividualCRUDForm;
						
			private var titleWindow:TitleWindow;
			
			[Bindable]
			public var loc:Object;
			
			[Bindable]
			public var alternatives:ArrayCollection; //this is a list of Alternative Wrappers.
			
			[Bindable]
			public var selected:AlternativeWrapper;
			
			protected function grid_selectionChangeHandler(event:GridSelectionEvent):void
			{
				selected = grid.selectedItem as AlternativeWrapper;
				dispatchEvent(new Event("alternativeSelectedChanged"));
			}
			
			public function cleanSelection():void{
				grid.selectedItem = null;
				selected = null;
			}
			
			private function dateFormat(item:Object,column:GridColumn):String
			{
				return DateTimeUtils.formatDateWithPattern(item [column.dataField] as Date,loc.dateFormat);
			}
			
			protected function grid_gridClickHandler(event:GridEvent):void
			{
				Mouse.cursor = MouseCursor.AUTO;
				
				var row:Object = event.item;
				//if there was a valid row o user clicked on room cell, do nothing.
				if(row == null || (event.columnIndex != 5 && event.columnIndex != 6)) { 
					return;
				}
				
				if(event.columnIndex == 5){ //User clicks on Promotion
					var promotion:Promotion = row.alternative.promotion;
					if(promotion!=null){
						//TODO: make a promotion view
						var promotionIndividual:PromotionIndividualCRUDForm = new PromotionIndividualCRUDForm();
						promotionIndividual.loc = loc;
						promotionIndividual.addEventListener("cancelClicked",titleWindow_close);
						titleWindow = WindowsUtils.openDialog(loc.promotion.singular,promotionIndividual);
						promotionIndividual.currentPromotion = promotion;
					}
				}else if(event.columnIndex == 6){ //user clicks on View
					var alternativeInCalendar:AlternativeViewInCalendar = new AlternativeViewInCalendar();
					alternativeInCalendar.alternative = row as AlternativeWrapper;
					alternativeInCalendar.addEventListener("closeClicked",titleWindow_close);
					titleWindow = WindowsUtils.openDialog(loc.alternative.alternativeView,alternativeInCalendar);
				}
			}
			
			protected function grid_gridMouseRollOverHandler(event:GridEvent):void
			{
				var row:Object = event.item;
				//if there was a valid row o user clicked on room cell, do nothing.
				if(row == null || (event.columnIndex != 5 && event.columnIndex != 6)) { 
					return;
				}
				
				if(event.columnIndex == 5 || event.columnIndex == 6){ //user mouse rolls over a promotion or an alternative detail
					Mouse.cursor = MouseCursor.BUTTON;
				}
				else{
					Mouse.cursor = MouseCursor.AUTO;
				}
			}
			
			protected function grid_gridMouseRollOutHandler(event:GridEvent):void
			{
				Mouse.cursor = MouseCursor.AUTO;
			}
			
			
			private function titleWindow_close(evt:Object):void {
				PopUpManager.removePopUp(titleWindow);
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:DataGrid id="grid" width="100%" height="100%" dataProvider="{alternatives}" alternatingRowColors="{Colors.ALTERNATING_ROW_COLORS}"
				selectionChange="grid_selectionChangeHandler(event)" skinClass="view.skins.CustomDataGridSkin"
				gridClick="grid_gridClickHandler(event)" gridRollOver="grid_gridMouseRollOverHandler(event)"
				gridRollOut="grid_gridMouseRollOutHandler(event)">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn dataField="involvedRooms" headerText="{loc.alternative.involvedRooms}"></s:GridColumn>
				<s:GridColumn dataField="alternative.budget.basePriceWithDefaultCurrency" headerText="{loc.budget.basePrice}"></s:GridColumn>
				<s:GridColumn dataField="alternative.budget.basePricePlusAllServicesIncludedInBasePriceWithDefaultCurrency" headerText="{loc.budget.basePricePlusAllServicesIncludedInBasePrice}"></s:GridColumn>
				<s:GridColumn dataField="dateFrom" headerText="{loc.alternative.dateFrom}" labelFunction="dateFormat"></s:GridColumn>
				<s:GridColumn dataField="dateTo" headerText="{loc.alternative.dateTo}" labelFunction="dateFormat"></s:GridColumn>
				<s:GridColumn width="80" dataField="alternative.promotionIcon" headerText="{loc.promotion.singular}" resizable="false" >
					<s:itemRenderer>
						<fx:Component>
							<s:GridItemRenderer clipAndEnableScrolling="true">
								<fx:Script>
									<![CDATA[
										import resources.icons.Icons;
									]]>
								</fx:Script>
								<s:HGroup verticalAlign="middle" horizontalAlign="center" width="100%" height="100%">
									<s:Image source="{data.promotionIcon}"/>
								</s:HGroup>
							</s:GridItemRenderer>
						</fx:Component>
					</s:itemRenderer>    
				</s:GridColumn>
				<s:GridColumn width="50" headerText="{loc.alternative.view}" resizable="false">
					<s:itemRenderer>
						<fx:Component>
							<s:GridItemRenderer clipAndEnableScrolling="true">
								<fx:Script>
									<![CDATA[
										import resources.icons.Icons;
									]]>
								</fx:Script>
								<s:HGroup verticalAlign="middle" horizontalAlign="center" width="100%" height="100%">
									<!--<components:ViewAlternativeButton alternative="{data}" icon="{Icons.view}"/>-->
									<s:Image source="{Icons.view}"/>
								</s:HGroup>
							</s:GridItemRenderer>
						</fx:Component>
					</s:itemRenderer>    
				</s:GridColumn>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>
</s:Group>
