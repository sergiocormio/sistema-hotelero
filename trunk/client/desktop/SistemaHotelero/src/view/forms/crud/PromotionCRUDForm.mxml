<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%" xmlns:individual="view.forms.crud.individual.*" xmlns:components="view.components.*"
		  creationComplete="init(event)">
	<fx:Script>
		<![CDATA[
			import model.Promotion;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			
			import resources.Colors;
			
			import services.crud.PromotionService;
			
			import spark.events.GridSelectionEvent;
			
			import utils.DateTimeUtils;
			import utils.FaultHandler;
			
			[Bindable]
			public var loc:Object;
			
			[Bindable]
			private var promotions:ArrayCollection = new ArrayCollection();
			
			private function retrieveAll_resultHandler(event:ResultEvent,token:Object=null):void {
				grid.selectedItem = null;
				promotions.removeAll();
				promotions.addAll(event.result as ArrayCollection);
			}
			
			
			private function delete_resultHandler(event:ResultEvent,token:Object=null):void {
				refreshGrid();
			}
			
			
			protected function init(event:FlexEvent):void{
				refreshGrid();
			}
			
			protected function refreshGrid():void
			{
				individual.enabled = false;
				grid.selectedItem = null;
				new PromotionService().retrieveAll(retrieveAll_resultHandler,FaultHandler.defaultFaultHandler);
			}
			
			protected function grid_selectionChangeHandler(event:GridSelectionEvent):void
			{
				if(grid.selectedItem !=null){
					individual.currentPromotion = grid.selectedItem as Promotion;
				}
				individual.enabled = false;
			}
			
			protected function modifyPromotion():void
			{
				individual.currentPromotion = grid.selectedItem as Promotion;
				individual.isUpdate = true;
				individual.enabled=true;
				
			}
			
			protected function deletePromotion():void
			{
				new PromotionService().deleteRecord(grid.selectedItem as Promotion,delete_resultHandler,FaultHandler.defaultFaultHandler);
			}
			
			protected function addPromotion():void
			{
				grid.selectedItem = null;
				individual.currentPromotion = new Promotion();
				individual.isUpdate = false;
				individual.enabled = true;
			}
			
			private function dateFormat(item:Object,column:GridColumn):String
			{
				return DateTimeUtils.formatDateWithPattern(item [column.dataField] as Date,loc.dateFormat);
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<mx:VDividedBox height="100%" width="100%">
		<s:HGroup width="100%" height="60%">
			<s:DataGrid id="grid" width="100%" height="100%" dataProvider="{promotions}" selectionChange="grid_selectionChangeHandler(event)" alternatingRowColors="{Colors.ALTERNATING_ROW_COLORS}" skinClass="view.skins.CustomDataGridSkin">
				<s:columns>
					<s:ArrayList>
						<s:GridColumn dataField="name" headerText="{loc.promotion.name}"></s:GridColumn>
						<s:GridColumn dataField="description" headerText="{loc.promotion.description}"></s:GridColumn>
						<s:GridColumn dataField="roomType.name" headerText="{loc.roomType.singular}"></s:GridColumn>
						<s:GridColumn dataField="dateFrom" headerText="{loc.promotion.dateFrom}" labelFunction="dateFormat"></s:GridColumn>
						<s:GridColumn dataField="dateTo" headerText="{loc.promotion.dateTo}" labelFunction="dateFormat"></s:GridColumn>
						<s:GridColumn dataField="priceWithDefaultCurrency" headerText="{loc.promotion.totalPrice}"></s:GridColumn>
					</s:ArrayList>
				</s:columns>
			</s:DataGrid>
			<!-- BUTTONS -->
			<components:CRUDButtons height="100%" refreshClicked="refreshGrid()" addClicked="addPromotion()"
									modifyClicked="modifyPromotion()" removeClicked="deletePromotion()"
									loc="{loc}" modifyButtonEnabled="{grid.selectedItem!=null}"
									removeButtonEnabled="{grid.selectedItem!=null}"/>
		</s:HGroup>
		<individual:PromotionIndividualCRUDForm id="individual" enabled="false" loc="{loc}" saveSuccess="refreshGrid();" cancelClicked="individual.enabled=false;" height="40%"/>
	</mx:VDividedBox>
</s:VGroup>
