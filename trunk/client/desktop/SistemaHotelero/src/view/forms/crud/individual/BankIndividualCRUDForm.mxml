<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%" creationComplete="init()">
	<fx:Metadata> 
		[Event(name="cancelClicked", type="flash.events.Event")]
		[Event(name="saveSuccess", type="flash.events.Event")]
	</fx:Metadata> 
	<fx:Script>
		<![CDATA[
			import model.Bank;
			
			import mx.controls.Alert;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			
			import resources.Colors;
			import resources.icons.Icons;
			
			import services.crud.BankService;
			
			[Bindable]
			public var loc:Object;
			
			[Bindable]
			public var isUpdate:Boolean;
			
			private var _currentBank:Bank;
			
			public function get currentBank():Bank
			{
				return _currentBank;
			}
			
			public function set currentBank(value:Bank):void
			{
				_currentBank = value;
				bankText.text = _currentBank.name;
			}
			
			private function allFieldsAreValid():Boolean{
				var valid:Boolean = true;
				setEnabledValidators(true);
				if(bankNameValidator.validate().type != "valid"){
					valid = false;
				}
				setEnabledValidators(false);
				return valid;
			}
			
			private function setEnabledValidators(enabled:Boolean):void{
				bankNameValidator.enabled = enabled;
			}
			
			private function save():void{
				// validate all data
				if(!allFieldsAreValid()){
					return;
				}
				
				_currentBank.name = bankText.text;
				
				//calls service
				if(isUpdate){
					new BankService().updateRecord(_currentBank,bankSaved_resultHandler,faultHandler);
				}else{
					new BankService().createRecord(_currentBank,bankSaved_resultHandler,faultHandler);
				}
			}
			
			private function bankSaved_resultHandler(event:ResultEvent,token:Object=null):void {
				_currentBank = event.result as Bank;
				dispatchEvent(new Event("saveSuccess"));
			}
			
			private function cancel():void{
				dispatchEvent(new Event("cancelClicked"));
			}
			
			// Handle a message fault.
			private function faultHandler(event:FaultEvent,token:Object=null):void {
				var errCode:String = event.fault.rootCause.errorCode;
				
				Alert.show( loc.validator.server.child(errCode).text(), loc.validator.error );
			}
			
			protected function init():void
			{
				currentBank = new Bank();
				//bankText.setFocus();
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<mx:StringValidator id="bankNameValidator" 
							required="true"
							requiredFieldError="{loc.validator.requiredFieldError}" 
							source="{bankText}"
							property="text"/>
	</fx:Declarations>
	<s:Rect width="100%" height="100%">
		<s:stroke>
			<s:SolidColorStroke color="{Colors.YELLOW_COLOR}" weight="1"/>
		</s:stroke>
		<s:fill><s:SolidColor color="{Colors.GRAY_COLOR}"/></s:fill>
	</s:Rect>
	<s:VGroup width="100%" height="100%">
		<s:HGroup width="100%" horizontalAlign="center">
			<s:Form>
				<s:layout>
					<s:FormLayout gap="-14"/>
				</s:layout>  
				
				<s:FormItem label="{loc.bank.name}:" required="true">
					<s:TextInput id="bankText" width="200"/>
				</s:FormItem>
				
			</s:Form>
		</s:HGroup>
		<!-- BUTTONS -->
		<s:HGroup width="100%" height="100%" horizontalAlign="center" verticalAlign="middle">
			<s:Button label="{loc.button.save}" icon="{Icons.save}" click="save()"/>
			<s:Button label="{loc.button.cancel}" icon="{Icons.cancel}" click="cancel()"/>
		</s:HGroup>
		<s:Spacer height="5"/>
	</s:VGroup>
</s:Group>
