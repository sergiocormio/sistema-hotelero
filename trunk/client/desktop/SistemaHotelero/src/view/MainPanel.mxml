<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%" xmlns:crud="view.forms.crud.*" xmlns:forms="view.forms.*">
	<fx:Script>
		<![CDATA[
			import resources.icons.Icons;
			[Bindable]
			public var loc:Object;
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="#164891" />
				<s:GradientEntry color="#6798F1" />
				<s:GradientEntry color="#6798F1" />
				<s:GradientEntry color="#6798F1" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<s:VGroup height="100%" width="100%" paddingLeft="20" paddingRight="20" paddingTop="10">
		<s:ButtonBar dataProvider="{mainViewStack}" requireSelection="true" iconPlacement="top" useHandCursor="true"/>
		
		<mx:ViewStack id="mainViewStack" borderStyle="none" width="100%" height="100%">
			<s:NavigatorContent id="rooms" label="Rooms" icon="{Icons.hotel}" width="100%" height="100%">
				<s:VGroup width="100%" height="100%">
					<s:Label text="testing new panel"/>
				</s:VGroup>
			</s:NavigatorContent>
			
			<s:NavigatorContent id="customers" label="{loc.customer.plural}" icon="{Icons.customers}" width="100%" height="100%"> 
				<crud:CustomerCRUDForm loc="{loc}" width="100%" height="100%"/>
			</s:NavigatorContent>
			
			<s:NavigatorContent id="transports" label="Transports" icon="{Icons.add}" width="100%" height="100%">
				<s:VGroup width="100%" height="100%">
					<s:Label text="testing new panel"/>
				</s:VGroup>
			</s:NavigatorContent>
			
			<s:NavigatorContent id="maintain" label="Maintain" icon="{Icons.cancel}" width="100%" height="100%">
				<s:VGroup width="100%" height="100%">
					<s:Label text="testing new panel"/>
				</s:VGroup>
			</s:NavigatorContent>
			
			<s:NavigatorContent id="consumes" label="Consume" icon="{Icons.modify}" width="100%" height="100%">
				<s:VGroup width="100%" height="100%">
					<s:Label text="testing new panel"/>
				</s:VGroup>
			</s:NavigatorContent>
			
			<s:NavigatorContent id="advertisement" label="Advertisements" icon="{Icons.refresh}" width="100%" height="100%">
				<s:VGroup width="100%" height="100%">
					<s:Label text="testing new panel"/>
				</s:VGroup>
			</s:NavigatorContent>
			
			<s:NavigatorContent id="configuration" label="{loc.configuration.singular}" icon="{Icons.config}" width="100%" height="100%">
				<forms:ConfigurationForm width="100%" height="100%" loc="{loc}"/>
			</s:NavigatorContent>
			
		</mx:ViewStack>
	</s:VGroup>
</s:Group>
